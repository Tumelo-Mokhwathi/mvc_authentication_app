@model IEnumerable<MyApp.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/bower_components/Ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="/dist//css/style.css">
    <link rel="stylesheet" href="/dist/css/AdminLTE.min.css">
    <link rel="stylesheet" href="/plugins/iCheck/square/blue.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <style>
        body {
            background: url('../images/slide-2.jpg');
            text-align: center;
            font-family: 'Rajdhani', sans-serif;
            font-weight: 400;
        }

        #tableHead {
            background-color: transparent;
            color: #666;
        }

        #tableData {
            background-color: transparent;
            color: #666;
        }

        a {
            color: #666;
        }
    </style>
</head>
<body>
    <div class="login-box" style="width: 1000px">
        <div class="login-box-body">
            <section id="loginForm">
                <h2 style="text-align: center; color: #666">Employees Details</h2>
                <p>
                    <button class="btn btn-default btn-block btn-flat" 
                            style="width: 200px; margin-left:380px">@Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })</button>
                </p>
                <table class="table table-striped table-bordered" style="width: 100%">
                    <tr>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.FirstName)
                        </th>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.LastName)
                        </th>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.Company)
                        </th>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.Contact)
                        </th>
                        <th id="tableHead">
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th id="tableHead">
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.Age)
                            </td>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.Company)
                            </td>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td id="tableData">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td id="tableData">
                                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                            </td>
                        </tr>
                    }

                </table>
            </section>
        </div>
    </div>
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>

</html>